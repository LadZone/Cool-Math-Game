<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
  <shape android:shape="rectangle" >
    <corners
        android:radius="14dp"/>
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#ff4757"
        android:startColor="#ff4757"
        android:endColor="#ff4757"
        android:type="linear"
        />
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />
    <size
        android:width="150dp"
        android:height="60dp"
        />
    <stroke
        android:width="10dp"
        android:color="#ff4757"
        />
  </shape>
</item>

<item>
  <shape android:shape="rectangle" >
    <corners
        android:radius="14dp"/>
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#ffffff"
        android:startColor="#ffffff"
        android:endColor="#ffffff"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="150dp"
        android:height="60dp"
        />
    <stroke
        android:width="10dp"
        android:color="#ffffff"
        />
  </shape>
</item>


</layer-list>
